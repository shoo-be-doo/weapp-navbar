.navbar {
  width: 100vw;
  display: flex;
  box-sizing: border-box;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
}

.capsule {
  height: 100%;
  display: flex;
  box-sizing: border-box;

  /*border: #00000015 solid 0.5px;*/
}
.capsule-item {
  height: 100%;
}
.back {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  width: 100%;
}
.back > view {
  width: 10px;
  height: 10px;
  margin-left: 5px;
  transform: rotate(-45deg);
}

.title {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  text-align: center;
  height: 100%;
}

.search {
  width: 100%;
  height: 100%;

  background-color: #ccc;
}
